// Complement of the number 

#include<iostream>
#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;
int complement_of_Number(int n){
    if (n==0){
        return 1;
    }
    int a =~n;
    int mask=0;
    int digit=0;
    while(n!=0){
     digit+=1;
     n= n>>1;
    }
    for(int i =1; i <=digit; i++){
        mask = (mask<<1)  | 1;
    }
    int result = a & mask;
return result;
}
int main(){
    int n ;
    cin>>n;
    int ans =complement_of_Number(n);
    cout<<ans<<endl;
}
