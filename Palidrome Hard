
#include <bits/stdc++.h> 
using namespace std;
string LowerTOuppercase(string ch){    // converting all the character into lowwercase and removing special character and spaces
    string copy;
    for(int i =0; i<= ch.length();i++){
    if(ch[i]>='a'&& ch[i]<='z'){
       copy.push_back(ch[i]) ;
    }
    else if (ch[i]>='A' && ch[i]<='Z'){
     copy.push_back(ch[i]-'A'+'a');
    }
    else if (ch[i]>='0' && ch[i]<= '9'){
       copy.push_back(ch[i]) ;
    }
    else if (ch[i]==' ' ){
       continue;
    }
    }
    return copy;
}
bool checkPalindrome(string s)
{
    string copy =LowerTOuppercase(s);
    int i =0;
    int j = copy.length()-1;
    while(i<=j){
        if(copy[i]!=copy[j]){
   return false;
        }
        i++;
        j--;
    }
    return true;
}
int main(){
    string s;
    string copy;
    getline(cin,s);
     copy= LowerTOuppercase(s);
    cout<<copy<<endl;
   cout<<checkPalindrome(copy)<<endl;
}
